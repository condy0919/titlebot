SET(LIB_NAME libuchardet.so)
FIND_PATH(_UCHARDET_LIBRARIES NAMES ${LIB_NAME} PATHS /usr/lib/ /usr/local/lib/ /usr/lib/x86_64-linux-gnu/)

IF(_UCHARDET_LIBRARIES)
    SET(UCHARDET_FOUND TRUE)
    SET(UCHARDET_LIBRARIES ${_UCHARDET_LIBRARIES}/${LIB_NAME})
ENDIF(_UCHARDET_LIBRARIES)

IF(UCHARDET_FOUND)
    IF(NOT UCHARDET_FIND_QUIETLY)
        MESSAGE(STATUS "Found uchardet")
    ENDIF(NOT UCHARDET_FIND_QUIETLY)
ELSE(UCHARDET_FOUND)
    IF(UCHARDET_FOUND_REQUIRED)
        MESSAGE(FATAL_MESSAGE "could not find uchardet library")
    ENDIF(UCHARDET_FOUND_REQUIRED)
ENDIF(UCHARDET_FOUND)
