SET(LIB_NAME libjemalloc.so)
FIND_PATH(_JEMALLOC_LIBRARIES NAMES ${LIB_NAME} PATHS /usr/lib/ /usr/local/lib/ /usr/lib/x86_64-linux-gnu/)

IF(_JEMALLOC_LIBRARIES)
    SET(JEMALLOC_FOUND TRUE)
    SET(JEMALLOC_LIBRARIES ${_JEMALLOC_LIBRARIES}/${LIB_NAME})
ENDIF(_JEMALLOC_LIBRARIES)

IF(JEMALLOC_FOUND)
    IF(NOT JEMALLOC_FIND_QUIETLY)
        MESSAGE(STATUS "Found jemalloc")
    ENDIF(NOT JEMALLOC_FIND_QUIETLY)
ELSE(JEMALLOC_FOUND)
    IF(JEMALLOC_FOUND_REQUIRED)
        MESSAGE(FATAL_ERROR "could not find jemalloc library")
    ENDIF(JEMALLOC_FOUND_REQUIRED)
ENDIF(JEMALLOC_FOUND)
